<Window x:Class="PizzeriaWPFView.WindowStorageLoad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzeriaWPFView"
        mc:Ignorable="d"
        Title="Загруженность складов" Height="533.185" Width="532.935">
    <Grid Loaded="FormStoragesLoad_Load">
        <DataGrid x:Name="dataGridView" HorizontalAlignment="Left" Height="378" Margin="31,77,0,0" VerticalAlignment="Top" Width="473">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Склад"  Binding="{Binding StorageName}"/>
                <DataGridTextColumn Binding="{Binding Ingredientname}" ClipboardContentBinding="{x:Null}" Header="Компонент"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Count}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="button_save" Content="Сохранить в Excel" HorizontalAlignment="Left" Height="34" Margin="31,10,0,0" VerticalAlignment="Top" Width="132" Click="buttonSaveToExcel_Click"/>

    </Grid>
</Window>
